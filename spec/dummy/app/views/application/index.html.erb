  <%= submit_tag('Submit Confirm', id: 'submitConfirmTrigger', data: { confirm: 'Are you sure?' }) %>
<% end %>

<%= form_tag(destroy_path, method: :delete) do %>
  <%= button_tag('Button Confirm', id: 'buttonConfirmTrigger', data: { confirm: 'Are you sure?' }) %>
